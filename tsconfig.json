{
  "compilerOptions": {
    "target": "ESNext", 
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "moduleResolution": "node" , 
    "forceConsistentCasingInFileNames": true ,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true
    
  },
  "include": ["src/**/*", "src/config"]
}
